<div id="pageHead">
    <h1>Contact us</h1>
</div>

<div class="inside">
<% if @submitted %>
    Thank you for submitting your details
<% end %>

<form action="/contact" method="post">
    <div>
        <label for="name">Name</label>
        <input type='text' name='name' size="40"/>
        <label for="email">Email</label>
        <input type='text' name='email' size="40"/><br/>
    </div>
    <div>
        <label for="iam">I am </label><br/>
        &nbsp;&nbsp;<input type='radio' name="iam" value="NHS Employee"/> an NHS Employee<br/>
        &nbsp;&nbsp;<input type='radio' name="iam" value="Interested member of the public"/> an interested member of the public<br/>
        &nbsp;&nbsp;<input type='radio' name="iam" value="Other"/> Other<br/>
    </div>
    <br/>
    <div>
        <input type="submit" value='Send'/>
    </div>
</form>

</div>